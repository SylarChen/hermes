<?xml version='1.0' encoding='utf-8' ?>
<meta dev-mode='false'>
	<connector type='local'>
		<storage type='memory' default='true'>
			<topic name='local.order.new' />
			<topic name='test.topic' />
			<topic name='local.order.new' />
		</storage>
	</connector>
	<connector type='broker'>
		<storage type='memory'>
			<topic name="order.update" />
			<topic name="order.new" />
		</storage>
		<storage type='mysql'>
			<topic name="order_new" />
		</storage>
	</connector>
