			<topic name='kafka.SimpleTopic' />
			<topic name='kafka.SimpleTopic1' />
			<topic name='kafka.SimpleTopic2' />
		</storage>
		<storage type='consumer'>
			<property name='zookeeper.connect'
				value='fx-message04:2181,fx-message05:2181,fx-message06:2181' />
			<property name='offsets.storage' value='kafka' />
			<topic name='kafka.SimpleTopic' />
			<topic name='kafka.SimpleTopic1' />
			<topic name='kafka.SimpleTopic2' />
		</storage>
	</connector>
</meta>